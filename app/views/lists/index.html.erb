<div class="card-category">
  <div>
    <h3>Save any kind of movies</h3>
    <p>Classic</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between mt-3 mb-3">
    <h4>My lists</h4>
    <%= link_to "Create a movie list", new_list_path, class: "btn-gradient" %>
  </div>
  <div>
    <% @lists.each do |list| %>
        <div>
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key, height: 300, width: 300, crop: :fill %>
          <% end %>
          <h5><%= link_to list.name, list_path(list) %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>
