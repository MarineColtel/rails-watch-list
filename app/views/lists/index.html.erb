<div class="card-category">
  <div>
    <h3>Save any kind of movies</h3>
    <p>Classic</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between mt-3 mb-3">
    <h4>My lists</h4>
    <%= link_to "Create a movie list", new_list_path, class: "btn-gradient" %>
  </div>
  <div class="d-flex mt-3 mb-3">
    <% @lists.each do |list| %>
        <div>
          <% if list.photo.attached? %>
            <div class="movie-card-list m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300 %>')">
          <% end %>
          <h5><%= link_to list.name, list_path(list) %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>
